mixin do-stuff()
  p stuff!

mixin article()
  article
    if block
      block

mixin section()
  section
    if block
      block

mixin img(source, fullHeight)
  - var classes = fullHeight ? 'full-height' : '';
  .img(class=classes)
    .img-container
      img(src='assets/' + source)

mixin submenu()
  ul
    if block
      block

mixin template-link(linkTarget, linkTitle)
  a(href=linkTarget, data-title=linkTitle).template-link
    if block
      block

mixin submenu-item(linkTarget, T, en, ro, titleEn, titleRo)
  - ro = ro || en;
  - titleEn = titleEn || en;
  - titleRo = titleRo || ro;
  li
    - var translatedTitle = T.span({ en: titleEn, ro: titleRo });
    - var translated = T.span({ en: en, ro: ro });
    a(href=linkTarget, data-title=translatedTitle).template-link
      .submenu-title
        != translated
      if block
        block

mixin submenu-caption(T, en, ro)
  - ro = ro || en;
  .submenu-caption
    != T.span({ en: en, ro: ro })

mixin maplink(posX, posY)
  a(href='map://' + posX + '/' + posY)
    if block
      block

mixin mapicon
  i.fa.fa-map-marker
