doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="fragment", content="!")
    meta(name="viewport", content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no, minimal-ui")
    title Danube Delta iPhone demo

    // build:css({.tmp,dist}/device-demo) bundle.css
    link(rel="stylesheet", href="main.css")
    // endbuild

    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
  body
    .well.zoom Zoom: &nbsp;
        a.btn.btn-default(data-value=0.25) 0.25x
        a.btn.btn-default(data-value=0.5)  0.5x
        a.btn.btn-info(data-value=1)    1x

    .device-demo-iphone
      iframe(src='../index.html')

    script.
      $(function() {
        $('.zoom a').click(function(e){
          var $target = $(e.target);
          var value = $target.data('value');
          $('.zoom a').removeClass('btn-info').addClass('btn-default');
          $target.removeClass('btn-default').addClass('btn-info');

          $('.device-demo-iphone').css({transform: 'scale(' + value +')', marginTop: (800*(value - 1)) +'px'});
        });
      });

    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')